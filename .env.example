# Neo Routine Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/neo-routine?retryWrites=true&w=majority

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT expiration (e.g., "7d" for 7 days)
JWT_EXPIRES_IN=7d

# Node environment
NODE_ENV=development

# App URL (used for cookies and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Gmail SMTP (optional) - for sending emails in production
# Set these if you want to send real emails using Gmail SMTP
GMAIL_USER=your@gmail.com
GMAIL_APP_PASSWORD=your_app_password

# ===========================================
# Stripe Payment Integration
# ===========================================

# Stripe API Keys (get from https://dashboard.stripe.com/test/apikeys)
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx

# Stripe Webhook Secret (get from https://dashboard.stripe.com/test/webhooks)
# Create a webhook endpoint pointing to: https://yourdomain.com/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Stripe Price IDs (get from https://dashboard.stripe.com/test/products)
# Create products with recurring prices, then copy the price IDs (price_xxx)
STRIPE_PRICE_PREMIUM_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM_YEARLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM_PLUS_MONTHLY=price_xxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM_PLUS_YEARLY=price_xxxxxxxxxxxxx
