# Neo Routine Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/neo-routine?retryWrites=true&w=majority

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT expiration (e.g., "7d" for 7 days)
JWT_EXPIRES_IN=7d

# Node environment
NODE_ENV=development

# App URL (used for cookies and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Gmail SMTP (optional) - for sending emails in production
# Set these if you want to send real emails using Gmail SMTP
GMAIL_USER=your@gmail.com
GMAIL_APP_PASSWORD=your_app_password
